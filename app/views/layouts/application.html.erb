    <% # Set the styles for the 'main content': the nav bar and the posts for that page. %>
    <% # Set the margin in the left and right directions to auto %>
    <% # Set the background color to be the light-gray %>
    <main class="flex flex-col w-4/5 m-auto mt-2 bg-hackernews-light-gray">
      <% # Hacker News nav menu %>
      <% # [Y] *Hacker News* new | past | comments | ask | show | jobs | submit     ...       login %>

      <% # Logo %>
      <% # Set the width to full
         # Set the padding to 2 pixels
         # Justify content to the start
         # Don't flex
         # Set the background to the hackernews orange color %>
      <div class="w-full h-6 flex flex-row items-center justify-start bg-hackernews-orange">

        <% # Create the Y logo border, set size and border %>
        <div class="size-[20px] m-[2px] flex items-center justify-center border-solid border-[1px] border-white">
          <a href="<%= root_path %>">
            <%= image_tag "y18.svg" %>
          </a>
        </div>

        <% # text %>
        <div class="w-full flex flex-row mx-1 relative space-x-1">

          <% # Hacker News title %>
          <div class="font-bold">
            <a href="<%= news_path %>">Hacker News</a>
          </div>

          <% # new link %>
          <a href="<%= root_path %>">new</a>

          <div>|</div>

          <% # past link %>
          <a href="<%= root_path %>">past</a>

          <div>|</div>

          <% # comments link %>
          <a href="<%= root_path %>">comments</a>

          <div>|</div>

          <% # ask link %>
          <a href="<%= root_path %>">ask</a>

          <div>|</div>

          <% # show link %>
          <a href="<%= root_path %>">show</a>

          <div>|</div>

          <% # jobs link %>
          <a href="<%= root_path %>">jobs</a>

          <div>|</div>

          <% # submit link %>
          <a href="<%= root_path %>">submit</a>

          <% # login link %>
          <div class="absolute right-0" >
            <a href="<%= root_path %>">login</a>
          </div>

        </div>

      </div>

      <%= yield %>
    </main>

    <footer class="text-center mt-6 pb-6 h-10">
      <p class="text-gray-500">
