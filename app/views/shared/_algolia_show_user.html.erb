<div class="mt-2 mb-10 pr-3 pl-1 text-hackernews-story-gray">
    <div class="flex flex-col text-hackernews-item-gray">
        <div class="flex flex-row mb-0.5">
            <div class="basis-16">user:</div>
            <div class=""><%= item.id %></div>
        </div>
        <div class="flex flex-row mb-0.5">
            <div class="basis-16">created:</div>
            <div class="text-black">
                <% time = Time.at(item.created) %>
                <%= Date.new(time.year, time.month, time.day).strftime("%B %d, %Y") %>
            </div>
        </div>
        <div class="flex flex-row mb-0.5">
            <div class="basis-16">karma:</div>
            <div><%= item.karma %></div>
        </div>
        <div class="flex flex-row mb-0.5">
            <div class="basis-16">about:</div>
            <div><%= raw sanitize item.about %></div>
        </div>
        <div class="flex flex-col ml-16 text-black underline">
            <% # TODO: make these work %>
            <div>
                submissions
            </div>
            <div>
                comments
            </div>
            <div>
                favorites
            </div>
        </div>
    </div>
</div>
